{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "outDir": "build",
    "rootDir": "src",
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
